APP_NAME="Icon"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://icon.gs2e.ci

# Base de données PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=icon
DB_USERNAME=icon
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue & Broadcasting
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=reverb

# Reverb WebSocket
REVERB_APP_ID=icon-local
REVERB_APP_KEY=icon-local-key
REVERB_APP_SECRET=icon-local-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch:9200
ELASTICSEARCH_INDEX=icon-exchanges

# Icon Agent Configuration
ICON_AGENT_CURRENT_VERSION=0.1.0
ICON_AGENT_UPDATE_URL=https://icon.gs2e.ci/updates
ICON_AGENT_BATCH_SIZE=100
ICON_AGENT_OFFLINE_THRESHOLD=300

# Sécurité
ICON_HMAC_SECRET=your_hmac_secret_here_change_me
ICON_VERIFY_SIGNATURES=true
ICON_SIGNATURE_MAX_AGE=300

# DLP
ICON_DLP_ENABLED=true
ICON_DLP_AUTO_ALERT=true
ICON_DLP_MAX_SCAN_LENGTH=50000

# Rétention des données (jours)
ICON_EVENT_RETENTION_DAYS=90
ICON_ALERT_RETENTION_DAYS=180

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail (pour notifications futures)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@gs2e.ci"
MAIL_FROM_NAME="Icon"
