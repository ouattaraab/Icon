# Icon Docker Environment
# Copy to .env and set your values

# Laravel
APP_NAME=Icon
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_PHP_ARTISAN_KEY_GENERATE
APP_DEBUG=true
APP_URL=http://localhost:8888

# PostgreSQL
DB_PASSWORD=your_secure_password_here

# Agent security
ICON_HMAC_SECRET=generate_with_openssl_rand_hex_32

# Registration key: if set, agents must provide this key during initial
# registration (X-Registration-Key header). Leave empty to disable.
# ICON_REGISTRATION_KEY=

# Ports (change to avoid conflicts with other services)
NGINX_PORT=8888
POSTGRES_PORT=5433
ES_PORT=9201
REDIS_PORT=6380
REVERB_PORT=8080

# Reverb WebSocket (server-side, used internally between containers)
REVERB_APP_ID=icon-local
REVERB_APP_KEY=icon-local-key
REVERB_APP_SECRET=icon-local-secret
REVERB_HOST=reverb
REVERB_SCHEME=http

# Reverb WebSocket (client-side, used by the browser to connect from outside Docker)
# VITE_REVERB_HOST: hostname the browser uses to reach Reverb (default: localhost)
# VITE_REVERB_PORT: port the browser uses to reach Reverb (default: 8080, must match REVERB_PORT)
# VITE_REVERB_SCHEME: http or https depending on your setup
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=8080
VITE_REVERB_SCHEME=http
